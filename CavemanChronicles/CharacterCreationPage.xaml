<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CavemanChronicles.CharacterCreationPage"
             BackgroundColor="Black">

    <ScrollView x:Name="MainScrollView">
        <Grid Padding="15" RowSpacing="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Main character sheet area -->
                <RowDefinition Height="Auto"/>
                <!-- Bottom sections -->
            </Grid.RowDefinitions>

            <!-- HEADER SECTION -->
            <Border Grid.Row="0"
                    Stroke="#FFD700"
                    StrokeThickness="3"
                    Padding="15,10"
                    BackgroundColor="#0a0015">
                <Grid ColumnDefinitions="*,Auto,*">
                    <BoxView Grid.Column="0" HeightRequest="2" VerticalOptions="Center">
                        <BoxView.Background>
                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                <GradientStop Color="Transparent" Offset="0.0"/>
                                <GradientStop Color="#FFD700" Offset="1.0"/>
                            </LinearGradientBrush>
                        </BoxView.Background>
                    </BoxView>

                    <Label Grid.Column="1"
                           Text="◆ DUNGEONS &amp; DRAGONS ◆"
                           TextColor="#FFD700"
                           FontFamily="Courier New"
                           FontSize="18"
                           FontAttributes="Bold"
                           Margin="20,0"/>

                    <BoxView Grid.Column="2" HeightRequest="2" VerticalOptions="Center">
                        <BoxView.Background>
                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                <GradientStop Color="#FFD700" Offset="0.0"/>
                                <GradientStop Color="Transparent" Offset="1.0"/>
                            </LinearGradientBrush>
                        </BoxView.Background>
                    </BoxView>
                </Grid>
            </Border>

            <!-- MAIN CHARACTER SHEET AREA -->
            <Border Grid.Row="1"
                    Stroke="#00FF00"
                    StrokeThickness="2"
                    Padding="15"
                    BackgroundColor="Black"
                    Margin="0,10,0,0">
                <Grid RowDefinitions="Auto,Auto,Auto,*" RowSpacing="15">

                    <!-- TOP ROW: Name, Class, Level, Race -->
                    <Grid Grid.Row="0" ColumnDefinitions="2*,*,Auto,*" ColumnSpacing="10">

                        <!-- Character Name -->
                        <Border Grid.Column="0"
                                Stroke="#00FF00"
                                StrokeThickness="2"
                                Padding="8">
                            <VerticalStackLayout Spacing="3">
                                <Label Text="CHARACTER NAME"
                                       TextColor="#00AA00"
                                       FontFamily="Courier New"
                                       FontSize="9"
                                       FontAttributes="Bold"/>
                                <Entry x:Name="NameEntry"
                                       Placeholder="Enter name..."
                                       PlaceholderColor="#004400"
                                       TextColor="#00FF00"
                                       BackgroundColor="Black"
                                       FontFamily="Courier New"
                                       FontSize="14"
                                       MaxLength="20"
                                       TextChanged="OnNameChanged"/>
                            </VerticalStackLayout>
                        </Border>

                        <!-- Class -->
                        <Border Grid.Column="1"
                                Stroke="#00FF00"
                                StrokeThickness="2"
                                Padding="8">
                            <VerticalStackLayout Spacing="3">
                                <Label Text="CLASS"
                                       TextColor="#00AA00"
                                       FontFamily="Courier New"
                                       FontSize="9"
                                       FontAttributes="Bold"/>
                                <Label x:Name="ClassDisplayLabel"
                                       Text="---"
                                       TextColor="#00FF00"
                                       FontFamily="Courier New"
                                       FontSize="12"
                                       VerticalOptions="Center"/>
                            </VerticalStackLayout>
                        </Border>

                        <!-- Level (Hexagonal design) -->
                        <Border Grid.Column="2"
                                Stroke="#FFD700"
                                StrokeThickness="3"
                                WidthRequest="70"
                                HeightRequest="70"
                                BackgroundColor="#1a0033">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="35"/>
                            </Border.StrokeShape>
                            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                                <Label Text="LEVEL"
                                       TextColor="#FFD700"
                                       FontFamily="Courier New"
                                       FontSize="9"
                                       HorizontalOptions="Center"/>
                                <Label Text="1"
                                       TextColor="#FFD700"
                                       FontFamily="Courier New"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </Border>

                        <!-- Species/Race -->
                        <Border Grid.Column="3"
                                Stroke="#00FF00"
                                StrokeThickness="2"
                                Padding="8">
                            <VerticalStackLayout Spacing="3">
                                <Label Text="SPECIES"
                                       TextColor="#00AA00"
                                       FontFamily="Courier New"
                                       FontSize="9"
                                       FontAttributes="Bold"/>
                                <Label x:Name="RaceDisplayLabel"
                                       Text="---"
                                       TextColor="#00FF00"
                                       FontFamily="Courier New"
                                       FontSize="12"
                                       VerticalOptions="Center"/>
                            </VerticalStackLayout>
                        </Border>
                    </Grid>

                    <!-- SECOND ROW: Background, HP, Initiative, Speed -->
                    <Grid Grid.Row="1" ColumnDefinitions="2*,*,*,*" ColumnSpacing="10">

                        <!-- Background -->
                        <Border Grid.Column="0"
                                Stroke="#00FF00"
                                StrokeThickness="2"
                                Padding="8">
                            <VerticalStackLayout Spacing="3">
                                <Label Text="BACKGROUND"
                                       TextColor="#00AA00"
                                       FontFamily="Courier New"
                                       FontSize="9"
                                       FontAttributes="Bold"/>
                                <Label x:Name="BackgroundDisplayLabel"
                                       Text="None"
                                       TextColor="#00FF00"
                                       FontFamily="Courier New"
                                       FontSize="11"
                                       VerticalOptions="Center"/>
                            </VerticalStackLayout>
                        </Border>

                        <!-- Hit Points -->
                        <Border Grid.Column="1"
                                Stroke="#FF4500"
                                StrokeThickness="2"
                                Padding="8">
                            <VerticalStackLayout Spacing="3">
                                <Label Text="HIT POINTS"
                                       TextColor="#FF4500"
                                       FontFamily="Courier New"
                                       FontSize="8"
                                       FontAttributes="Bold"
                                       HorizontalTextAlignment="Center"/>
                                <Label x:Name="HitPointsLabel"
                                       Text="--"
                                       TextColor="#FF4500"
                                       FontFamily="Courier New"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       HorizontalTextAlignment="Center"/>
                            </VerticalStackLayout>
                        </Border>

                        <!-- Initiative -->
                        <Border Grid.Column="2"
                                Stroke="#00FFFF"
                                StrokeThickness="2"
                                Padding="8">
                            <VerticalStackLayout Spacing="3">
                                <Label Text="INITIATIVE"
                                       TextColor="#00FFFF"
                                       FontFamily="Courier New"
                                       FontSize="8"
                                       FontAttributes="Bold"
                                       HorizontalTextAlignment="Center"/>
                                <Label x:Name="InitiativeLabel"
                                       Text="+0"
                                       TextColor="#00FFFF"
                                       FontFamily="Courier New"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       HorizontalTextAlignment="Center"/>
                            </VerticalStackLayout>
                        </Border>

                        <!-- Speed -->
                        <Border Grid.Column="3"
                                Stroke="#FFD700"
                                StrokeThickness="2"
                                Padding="8">
                            <VerticalStackLayout Spacing="3">
                                <Label Text="SPEED"
                                       TextColor="#FFD700"
                                       FontFamily="Courier New"
                                       FontSize="8"
                                       FontAttributes="Bold"
                                       HorizontalTextAlignment="Center"/>
                                <Label Text="30 ft"
                                       TextColor="#FFD700"
                                       FontFamily="Courier New"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       HorizontalTextAlignment="Center"/>
                            </VerticalStackLayout>
                        </Border>
                    </Grid>

                    <!-- MAIN CONTENT ROW: Abilities + Class/Race Selection -->
                    <Grid Grid.Row="2" ColumnDefinitions="Auto,*" ColumnSpacing="15">

                        <!-- LEFT COLUMN: ABILITY SCORES -->
                        <VerticalStackLayout Grid.Column="0" Spacing="10">

                            <!-- Proficiency Bonus -->
                            <Border Stroke="#FFD700"
                                    StrokeThickness="2"
                                    WidthRequest="100"
                                    Padding="5"
                                    BackgroundColor="#1a0033">
                                <VerticalStackLayout Spacing="3">
                                    <Label Text="PROFICIENCY BONUS"
                                           TextColor="#FFD700"
                                           FontFamily="Courier New"
                                           FontSize="7"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"/>
                                    <Label Text="+2"
                                           TextColor="#FFD700"
                                           FontFamily="Courier New"
                                           FontSize="20"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"/>
                                </VerticalStackLayout>
                            </Border>

                            <!-- Strength -->
                            <Border Stroke="#FF4500"
                                    StrokeThickness="2"
                                    WidthRequest="100"
                                    Padding="8"
                                    BackgroundColor="Black">
                                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="5">
                                    <Label Grid.Row="0"
                                           Text="STRENGTH"
                                           TextColor="#FF4500"
                                           FontFamily="Courier New"
                                           FontSize="10"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"/>

                                    <Border Grid.Row="1"
                                            Stroke="#FF4500"
                                            StrokeThickness="1"
                                            Padding="5"
                                            BackgroundColor="#1a0000">
                                        <Entry x:Name="StrengthEntry"
                                               Keyboard="Numeric"
                                               MaxLength="2"
                                               TextColor="#FF4500"
                                               BackgroundColor="Transparent"
                                               FontFamily="Courier New"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               HorizontalTextAlignment="Center"
                                               TextChanged="OnStatChanged"/>
                                    </Border>

                                    <Label Grid.Row="2"
                                           x:Name="StrengthModLabel"
                                           Text="+0"
                                           TextColor="#FFAA00"
                                           FontFamily="Courier New"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"/>

                                    <BoxView Grid.Row="3" HeightRequest="1" Color="#FF4500"/>

                                    <VerticalStackLayout Grid.Row="4" Spacing="3">
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5">
                                            <Ellipse Grid.Column="0"
                                                    WidthRequest="12"
                                                    HeightRequest="12"
                                                    Stroke="#FF4500"
                                                    StrokeThickness="1"/>
                                            <Label Grid.Column="1"
                                                   Text="Saving Throw"
                                                   TextColor="#00AA00"
                                                   FontFamily="Courier New"
                                                   FontSize="8"/>
                                        </Grid>
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5">
                                            <Ellipse Grid.Column="0"
                                                    WidthRequest="12"
                                                    HeightRequest="12"
                                                    Stroke="#FF4500"
                                                    StrokeThickness="1"/>
                                            <Label Grid.Column="1"
                                                   Text="Athletics"
                                                   TextColor="#00AA00"
                                                   FontFamily="Courier New"
                                                   FontSize="8"/>
                                        </Grid>
                                    </VerticalStackLayout>
                                </Grid>
                            </Border>

                            <!-- Dexterity -->
                            <Border Stroke="#00FFFF"
                                    StrokeThickness="2"
                                    WidthRequest="100"
                                    Padding="8"
                                    BackgroundColor="Black">
                                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="5">
                                    <Label Grid.Row="0"
                                           Text="DEXTERITY"
                                           TextColor="#00FFFF"
                                           FontFamily="Courier New"
                                           FontSize="10"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"/>

                                    <Border Grid.Row="1"
                                            Stroke="#00FFFF"
                                            StrokeThickness="1"
                                            Padding="5"
                                            BackgroundColor="#001a1a">
                                        <Entry x:Name="DexterityEntry"
                                               Keyboard="Numeric"
                                               MaxLength="2"
                                               TextColor="#00FFFF"
                                               BackgroundColor="Transparent"
                                               FontFamily="Courier New"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               HorizontalTextAlignment="Center"
                                               TextChanged="OnStatChanged"/>
                                    </Border>

                                    <Label Grid.Row="2"
                                           x:Name="DexterityModLabel"
                                           Text="+0"
                                           TextColor="#FFAA00"
                                           FontFamily="Courier New"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"/>

                                    <BoxView Grid.Row="3" HeightRequest="1" Color="#00FFFF"/>

                                    <VerticalStackLayout Grid.Row="4" Spacing="3">
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5">
                                            <Ellipse Grid.Column="0"
                                                    WidthRequest="12"
                                                    HeightRequest="12"
                                                    Stroke="#00FFFF"
                                                    StrokeThickness="1"/>
                                            <Label Grid.Column="1"
                                                   Text="Saving Throw"
                                                   TextColor="#00AA00"
                                                   FontFamily="Courier New"
                                                   FontSize="8"/>
                                        </Grid>
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5">
                                            <Ellipse Grid.Column="0"
                                                    WidthRequest="12"
                                                    HeightRequest="12"
                                                    Stroke="#00FFFF"
                                                    StrokeThickness="1"/>
                                            <Label Grid.Column="1"
                                                   Text="Acrobatics"
                                                   TextColor="#00AA00"
                                                   FontFamily="Courier New"
                                                   FontSize="8"/>
                                        </Grid>
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5">
                                            <Ellipse Grid.Column="0"
                                                    WidthRequest="12"
                                                    HeightRequest="12"
                                                    Stroke="#00FFFF"
                                                    StrokeThickness="1"/>
                                            <Label Grid.Column="1"
                                                   Text="Sleight of Hand"
                                                   TextColor="#00AA00"
                                                   FontFamily="Courier New"
                                                   FontSize="8"/>
                                        </Grid>
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5">
                                            <Ellipse Grid.Column="0"
                                                    WidthRequest="12"
                                                    HeightRequest="12"
                                                    Stroke="#00FFFF"
                                                    StrokeThickness="1"/>
                                            <Label Grid.Column="1"
                                                   Text="Stealth"
                                                   TextColor="#00AA00"
                                                   FontFamily="Courier New"
                                                   FontSize="8"/>
                                        </Grid>
                                    </VerticalStackLayout>
                                </Grid>
                            </Border>

                            <!-- Constitution -->
                            <Border Stroke="#00FF00"
                                    StrokeThickness="2"
                                    WidthRequest="100"
                                    Padding="8"
                                    BackgroundColor="Black">
                                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="5">
                                    <Label Grid.Row="0"
                                           Text="CONSTITUTION"
                                           TextColor="#00FF00"
                                           FontFamily="Courier New"
                                           FontSize="9"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"/>

                                    <Border Grid.Row="1"
                                            Stroke="#00FF00"
                                            StrokeThickness="1"
                                            Padding="5"
                                            BackgroundColor="#001a00">
                                        <Entry x:Name="ConstitutionEntry"
                                               Keyboard="Numeric"
                                               MaxLength="2"
                                               TextColor="#00FF00"
                                               BackgroundColor="Transparent"
                                               FontFamily="Courier New"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               HorizontalTextAlignment="Center"
                                               TextChanged="OnStatChanged"/>
                                    </Border>

                                    <Label Grid.Row="2"
                                           x:Name="ConstitutionModLabel"
                                           Text="+0"
                                           TextColor="#FFAA00"
                                           FontFamily="Courier New"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"/>

                                    <BoxView Grid.Row="3" HeightRequest="1" Color="#00FF00"/>

                                    <Grid Grid.Row="4" ColumnDefinitions="Auto,*" ColumnSpacing="5">
                                        <Ellipse Grid.Column="0"
                                                WidthRequest="12"
                                                HeightRequest="12"
                                                Stroke="#00FF00"
                                                StrokeThickness="1"/>
                                        <Label Grid.Column="1"
                                               Text="Saving Throw"
                                               TextColor="#00AA00"
                                               FontFamily="Courier New"
                                               FontSize="8"/>
                                    </Grid>
                                </Grid>
                            </Border>

                            <!-- Intelligence -->
                            <Border Stroke="#9370DB"
                                    StrokeThickness="2"
                                    WidthRequest="100"
                                    Padding="8"
                                    BackgroundColor="Black">
                                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="5">
                                    <Label Grid.Row="0"
                                           Text="INTELLIGENCE"
                                           TextColor="#9370DB"
                                           FontFamily="Courier New"
                                           FontSize="9"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"/>

                                    <Border Grid.Row="1"
                                            Stroke="#9370DB"
                                            StrokeThickness="1"
                                            Padding="5"
                                            BackgroundColor="#1a001a">
                                        <Entry x:Name="IntelligenceEntry"
                                               Keyboard="Numeric"
                                               MaxLength="2"
                                               TextColor="#9370DB"
                                               BackgroundColor="Transparent"
                                               FontFamily="Courier New"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               HorizontalTextAlignment="Center"
                                               TextChanged="OnStatChanged"/>
                                    </Border>

                                    <Label Grid.Row="2"
                                           x:Name="IntelligenceModLabel"
                                           Text="+0"
                                           TextColor="#FFAA00"
                                           FontFamily="Courier New"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"/>

                                    <BoxView Grid.Row="3" HeightRequest="1" Color="#9370DB"/>

                                    <VerticalStackLayout Grid.Row="4" Spacing="3">
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5">
                                            <Ellipse Grid.Column="0"
                                                    WidthRequest="12"
                                                    HeightRequest="12"
                                                    Stroke="#9370DB"
                                                    StrokeThickness="1"/>
                                            <Label Grid.Column="1"
                                                   Text="Saving Throw"
                                                   TextColor="#00AA00"
                                                   FontFamily="Courier New"
                                                   FontSize="8"/>
                                        </Grid>
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5">
                                            <Ellipse Grid.Column="0"
                                                    WidthRequest="12"
                                                    HeightRequest="12"
                                                    Stroke="#9370DB"
                                                    StrokeThickness="1"/>
                                            <Label Grid.Column="1"
                                                   Text="Arcana"
                                                   TextColor="#00AA00"
                                                   FontFamily="Courier New"
                                                   FontSize="8"/>
                                        </Grid>
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5">
                                            <Ellipse Grid.Column="0"
                                                    WidthRequest="12"
                                                    HeightRequest="12"
                                                    Stroke="#9370DB"
                                                    StrokeThickness="1"/>
                                            <Label Grid.Column="1"
                                                   Text="History"
                                                   TextColor="#00AA00"
                                                   FontFamily="Courier New"
                                                   FontSize="8"/>
                                        </Grid>
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5">
                                            <Ellipse Grid.Column="0"
                                                    WidthRequest="12"
                                                    HeightRequest="12"
                                                    Stroke="#9370DB"
                                                    StrokeThickness="1"/>
                                            <Label Grid.Column="1"
                                                   Text="Investigation"
                                                   TextColor="#00AA00"
                                                   FontFamily="Courier New"
                                                   FontSize="8"/>
                                        </Grid>
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5">
                                            <Ellipse Grid.Column="0"
                                                    WidthRequest="12"
                                                    HeightRequest="12"
                                                    Stroke="#9370DB"
                                                    StrokeThickness="1"/>
                                            <Label Grid.Column="1"
                                                   Text="Nature"
                                                   TextColor="#00AA00"
                                                   FontFamily="Courier New"
                                                   FontSize="8"/>
                                        </Grid>
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5">
                                            <Ellipse Grid.Column="0"
                                                    WidthRequest="12"
                                                    HeightRequest="12"
                                                    Stroke="#9370DB"
                                                    StrokeThickness="1"/>
                                            <Label Grid.Column="1"
                                                   Text="Religion"
                                                   TextColor="#00AA00"
                                                   FontFamily="Courier New"
                                                   FontSize="8"/>
                                        </Grid>
                                    </VerticalStackLayout>
                                </Grid>
                            </Border>

                            <!-- Wisdom -->
                            <Border Stroke="#FFD700"
                                    StrokeThickness="2"
                                    WidthRequest="100"
                                    Padding="8"
                                    BackgroundColor="Black">
                                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="5">
                                    <Label Grid.Row="0"
                                           Text="WISDOM"
                                           TextColor="#FFD700"
                                           FontFamily="Courier New"
                                           FontSize="10"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"/>

                                    <Border Grid.Row="1"
                                            Stroke="#FFD700"
                                            StrokeThickness="1"
                                            Padding="5"
                                            BackgroundColor="#1a1400">
                                        <Entry x:Name="WisdomEntry"
                                               Keyboard="Numeric"
                                               MaxLength="2"
                                               TextColor="#FFD700"
                                               BackgroundColor="Transparent"
                                               FontFamily="Courier New"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               HorizontalTextAlignment="Center"
                                               TextChanged="OnStatChanged"/>
                                    </Border>

                                    <Label Grid.Row="2"
                                           x:Name="WisdomModLabel"
                                           Text="+0"
                                           TextColor="#FFAA00"
                                           FontFamily="Courier New"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"/>

                                    <BoxView Grid.Row="3" HeightRequest="1" Color="#FFD700"/>

                                    <VerticalStackLayout Grid.Row="4" Spacing="3">
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5">
                                            <Ellipse Grid.Column="0"
                                                    WidthRequest="12"
                                                    HeightRequest="12"
                                                    Stroke="#FFD700"
                                                    StrokeThickness="1"/>
                                            <Label Grid.Column="1"
                                                   Text="Saving Throw"
                                                   TextColor="#00AA00"
                                                   FontFamily="Courier New"
                                                   FontSize="8"/>
                                        </Grid>
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5">
                                            <Ellipse Grid.Column="0"
                                                    WidthRequest="12"
                                                    HeightRequest="12"
                                                    Stroke="#FFD700"
                                                    StrokeThickness="1"/>
                                            <Label Grid.Column="1"
                                                   Text="Animal Handling"
                                                   TextColor="#00AA00"
                                                   FontFamily="Courier New"
                                                   FontSize="8"/>
                                        </Grid>
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5">
                                            <Ellipse Grid.Column="0"
                                                    WidthRequest="12"
                                                    HeightRequest="12"
                                                    Stroke="#FFD700"
                                                    StrokeThickness="1"/>
                                            <Label Grid.Column="1"
                                                   Text="Insight"
                                                   TextColor="#00AA00"
                                                   FontFamily="Courier New"
                                                   FontSize="8"/>
                                        </Grid>
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5">
                                            <Ellipse Grid.Column="0"
                                                    WidthRequest="12"
                                                    HeightRequest="12"
                                                    Stroke="#FFD700"
                                                    StrokeThickness="1"/>
                                            <Label Grid.Column="1"
                                                   Text="Medicine"
                                                   TextColor="#00AA00"
                                                   FontFamily="Courier New"
                                                   FontSize="8"/>
                                        </Grid>
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5">
                                            <Ellipse Grid.Column="0"
                                                    WidthRequest="12"
                                                    HeightRequest="12"
                                                    Stroke="#FFD700"
                                                    StrokeThickness="1"/>
                                            <Label Grid.Column="1"
                                                   Text="Perception"
                                                   TextColor="#00AA00"
                                                   FontFamily="Courier New"
                                                   FontSize="8"/>
                                        </Grid>
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5">
                                            <Ellipse Grid.Column="0"
                                                    WidthRequest="12"
                                                    HeightRequest="12"
                                                    Stroke="#FFD700"
                                                    StrokeThickness="1"/>
                                            <Label Grid.Column="1"
                                                   Text="Survival"
                                                   TextColor="#00AA00"
                                                   FontFamily="Courier New"
                                                   FontSize="8"/>
                                        </Grid>
                                    </VerticalStackLayout>
                                </Grid>
                            </Border>

                            <!-- Charisma -->
                            <Border Stroke="#FF69B4"
                                    StrokeThickness="2"
                                    WidthRequest="100"
                                    Padding="8"
                                    BackgroundColor="Black">
                                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="5">
                                    <Label Grid.Row="0"
                                           Text="CHARISMA"
                                           TextColor="#FF69B4"
                                           FontFamily="Courier New"
                                           FontSize="10"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"/>

                                    <Border Grid.Row="1"
                                            Stroke="#FF69B4"
                                            StrokeThickness="1"
                                            Padding="5"
                                            BackgroundColor="#1a0010">
                                        <Entry x:Name="CharismaEntry"
                                               Keyboard="Numeric"
                                               MaxLength="2"
                                               TextColor="#FF69B4"
                                               BackgroundColor="Transparent"
                                               FontFamily="Courier New"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               HorizontalTextAlignment="Center"
                                               TextChanged="OnStatChanged"/>
                                    </Border>

                                    <Label Grid.Row="2"
                                           x:Name="CharismaModLabel"
                                           Text="+0"
                                           TextColor="#FFAA00"
                                           FontFamily="Courier New"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"/>

                                    <BoxView Grid.Row="3" HeightRequest="1" Color="#FF69B4"/>

                                    <VerticalStackLayout Grid.Row="4" Spacing="3">
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5">
                                            <Ellipse Grid.Column="0"
                                                    WidthRequest="12"
                                                    HeightRequest="12"
                                                    Stroke="#FF69B4"
                                                    StrokeThickness="1"/>
                                            <Label Grid.Column="1"
                                                   Text="Saving Throw"
                                                   TextColor="#00AA00"
                                                   FontFamily="Courier New"
                                                   FontSize="8"/>
                                        </Grid>
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5">
                                            <Ellipse Grid.Column="0"
                                                    WidthRequest="12"
                                                    HeightRequest="12"
                                                    Stroke="#FF69B4"
                                                    StrokeThickness="1"/>
                                            <Label Grid.Column="1"
                                                   Text="Deception"
                                                   TextColor="#00AA00"
                                                   FontFamily="Courier New"
                                                   FontSize="8"/>
                                        </Grid>
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5">
                                            <Ellipse Grid.Column="0"
                                                    WidthRequest="12"
                                                    HeightRequest="12"
                                                    Stroke="#FF69B4"
                                                    StrokeThickness="1"/>
                                            <Label Grid.Column="1"
                                                   Text="Intimidation"
                                                   TextColor="#00AA00"
                                                   FontFamily="Courier New"
                                                   FontSize="8"/>
                                        </Grid>
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5">
                                            <Ellipse Grid.Column="0"
                                                    WidthRequest="12"
                                                    HeightRequest="12"
                                                    Stroke="#FF69B4"
                                                    StrokeThickness="1"/>
                                            <Label Grid.Column="1"
                                                   Text="Performance"
                                                   TextColor="#00AA00"
                                                   FontFamily="Courier New"
                                                   FontSize="8"/>
                                        </Grid>
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5">
                                            <Ellipse Grid.Column="0"
                                                    WidthRequest="12"
                                                    HeightRequest="12"
                                                    Stroke="#FF69B4"
                                                    StrokeThickness="1"/>
                                            <Label Grid.Column="1"
                                                   Text="Persuasion"
                                                   TextColor="#00AA00"
                                                   FontFamily="Courier New"
                                                   FontSize="8"/>
                                        </Grid>
                                    </VerticalStackLayout>
                                </Grid>
                            </Border>

                            <!-- Heroic Inspiration -->
                            <Border Stroke="#FFD700"
                                    StrokeThickness="2"
                                    WidthRequest="100"
                                    Padding="10"
                                    BackgroundColor="#1a0033">
                                <VerticalStackLayout Spacing="5">
                                    <Label Text="HEROIC"
                                           TextColor="#FFD700"
                                           FontFamily="Courier New"
                                           FontSize="9"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"/>
                                    <Label Text="INSPIRATION"
                                           TextColor="#FFD700"
                                           FontFamily="Courier New"
                                           FontSize="9"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"/>
                                    <Label Text="⚔"
                                           TextColor="#FFD700"
                                           FontFamily="Courier New"
                                           FontSize="24"
                                           HorizontalTextAlignment="Center"/>
                                </VerticalStackLayout>
                            </Border>

                            <!-- Roll Stats Button -->
                            <Border Stroke="#00FF00"
                                    StrokeThickness="2"
                                    Padding="10"
                                    BackgroundColor="#003300">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnRollStats"/>
                                </Border.GestureRecognizers>
                                <Label Text="🎲 ROLL STATS"
                                       TextColor="#00FF00"
                                       FontFamily="Courier New"
                                       FontSize="11"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- RIGHT COLUMN: Selection Areas -->
                        <VerticalStackLayout Grid.Column="1" Spacing="15">

                            <!-- Race Selection -->
                            <Border Stroke="#00FF00"
                                    StrokeThickness="2"
                                    Padding="12"
                                    BackgroundColor="Black">
                                <VerticalStackLayout Spacing="8">
                                    <Label Text="═══ SELECT SPECIES (RACE) ═══"
                                           TextColor="#00FF00"
                                           FontFamily="Courier New"
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"/>

                                    <CollectionView x:Name="RaceCollectionView"
                                                    SelectionMode="Single"
                                                    SelectionChanged="OnRaceSelected"
                                                    HeightRequest="180">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <Border Stroke="#00AA00"
                                                        StrokeThickness="1"
                                                        Padding="8"
                                                        Margin="0,3"
                                                        BackgroundColor="Black">
                                                    <VerticalStackLayout Spacing="3">
                                                        <Label Text="{Binding Name}"
                                                               TextColor="#00FF00"
                                                               FontFamily="Courier New"
                                                               FontSize="13"
                                                               FontAttributes="Bold"/>
                                                        <Label Text="{Binding Description}"
                                                               TextColor="#00AA00"
                                                               FontFamily="Courier New"
                                                               FontSize="10"
                                                               LineBreakMode="WordWrap"/>
                                                    </VerticalStackLayout>
                                                </Border>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </VerticalStackLayout>
                            </Border>

                            <!-- Class Selection -->
                            <Border Stroke="#FFD700"
                                    StrokeThickness="2"
                                    Padding="12"
                                    BackgroundColor="Black">
                                <VerticalStackLayout Spacing="8">
                                    <Label Text="═══ SELECT CLASS ═══"
                                           TextColor="#FFD700"
                                           FontFamily="Courier New"
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"/>

                                    <CollectionView x:Name="ClassCollectionView"
                                                    SelectionMode="Single"
                                                    SelectionChanged="OnClassSelected"
                                                    HeightRequest="200">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <Border Stroke="#AA8800"
                                                        StrokeThickness="1"
                                                        Padding="8"
                                                        Margin="0,3"
                                                        BackgroundColor="Black">
                                                    <VerticalStackLayout Spacing="3">
                                                        <Label Text="{Binding Name}"
                                                               TextColor="#FFD700"
                                                               FontFamily="Courier New"
                                                               FontSize="13"
                                                               FontAttributes="Bold"/>
                                                        <Label Text="{Binding Description}"
                                                               TextColor="#AA8800"
                                                               FontFamily="Courier New"
                                                               FontSize="10"
                                                               LineBreakMode="WordWrap"/>
                                                        <Label FontFamily="Courier New" FontSize="9" TextColor="#666600">
                                                            <Label.FormattedText>
                                                                <FormattedString>
                                                                    <Span Text="Hit Die: d" />
                                                                    <Span Text="{Binding HitDie}" />
                                                                    <Span Text=" | " />
                                                                    <Span Text="{Binding PrimaryAbility}" />
                                                                </FormattedString>
                                                            </Label.FormattedText>
                                                        </Label>
                                                    </VerticalStackLayout>
                                                </Border>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </VerticalStackLayout>
                            </Border>

                            <!-- Background Selection -->
                            <Border Stroke="#00FFFF"
                                    StrokeThickness="2"
                                    Padding="12"
                                    BackgroundColor="Black">
                                <VerticalStackLayout Spacing="8">
                                    <Label Text="═══ SELECT BACKGROUND (OPTIONAL) ═══"
                                           TextColor="#00FFFF"
                                           FontFamily="Courier New"
                                           FontSize="11"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"/>

                                    <CollectionView x:Name="BackgroundCollectionView"
                                                    SelectionMode="Single"
                                                    SelectionChanged="OnBackgroundSelected"
                                                    HeightRequest="150">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <Border Stroke="#00AAAA"
                                                        StrokeThickness="1"
                                                        Padding="8"
                                                        Margin="0,3"
                                                        BackgroundColor="Black">
                                                    <VerticalStackLayout Spacing="3">
                                                        <Label Text="{Binding Name}"
                                                               TextColor="#00FFFF"
                                                               FontFamily="Courier New"
                                                               FontSize="12"
                                                               FontAttributes="Bold"/>
                                                        <Label Text="{Binding Description}"
                                                               TextColor="#00AAAA"
                                                               FontFamily="Courier New"
                                                               FontSize="9"
                                                               LineBreakMode="WordWrap"/>
                                                    </VerticalStackLayout>
                                                </Border>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </VerticalStackLayout>
                            </Border>

                        </VerticalStackLayout>
                    </Grid>

                    <!-- BACKSTORY SECTION (Optional) -->
                    <Border Grid.Row="3"
                            x:Name="BackstoryPanel"
                            Stroke="#9370DB"
                            StrokeThickness="2"
                            Padding="12"
                            BackgroundColor="Black"
                            IsVisible="False"
                            Margin="0,10,0,0">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="BACKSTORY &amp; PERSONALITY (OPTIONAL)"
                                   TextColor="#9370DB"
                                   FontFamily="Courier New"
                                   FontSize="11"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"/>

                            <Editor x:Name="BackstoryEditor"
                                   Placeholder="Write your character's backstory..."
                                   PlaceholderColor="#330033"
                                   TextColor="#9370DB"
                                   BackgroundColor="Black"
                                   FontFamily="Courier New"
                                   FontSize="11"
                                   HeightRequest="100"
                                   MaxLength="500"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>
            </Border>

            <!-- BOTTOM SECTION: Start Button -->
            <Border Grid.Row="2"
                    x:Name="StartButton"
                    Stroke="#FFD700"
                    StrokeThickness="3"
                    Padding="20"
                    IsVisible="False"
                    Margin="0,15,0,20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#2B1810" Offset="0.0"/>
                        <GradientStop Color="#1a0f0a" Offset="1.0"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnStartAdventure"/>
                </Border.GestureRecognizers>
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <Label Grid.Column="0"
                           Text="⚔ "
                           TextColor="#FFD700"
                           FontFamily="Courier New"
                           FontSize="28"
                           VerticalOptions="Center"/>
                    <Label Grid.Column="1"
                           Text="BEGIN ADVENTURE"
                           TextColor="#FFD700"
                           FontFamily="Courier New"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                    <Label Grid.Column="2"
                           Text=" ⚔"
                           TextColor="#FFD700"
                           FontFamily="Courier New"
                           FontSize="28"
                           VerticalOptions="Center"/>
                </Grid>
            </Border>

        </Grid>
    </ScrollView>
</ContentPage>