<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CavemanChronicles.LoadGamePage"
             BackgroundColor="Black">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20" RowSpacing="20">

        <!-- Title -->
        <Border Grid.Row="0"
                Stroke="#00FF00"
                StrokeThickness="3"
                Padding="20,15"
                BackgroundColor="#001100">
            <Label Text="═══ LOAD SAVED GAME ═══"
                   TextColor="#00FF00"
                   FontFamily="Courier New"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
        </Border>

        <!-- Saved Characters List -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout x:Name="SavesContainer" Spacing="15">
                <!-- Saved characters will be added here dynamically -->
                <Border x:Name="NoSavesPanel"
                        Stroke="#00FF00"
                        StrokeThickness="2"
                        Padding="30"
                        BackgroundColor="Black"
                        IsVisible="False">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="[ NO SAVED GAMES FOUND ]"
                               TextColor="#FFAA00"
                               FontFamily="Courier New"
                               FontSize="18"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                        <Label Text="Start a new adventure to create your first save!"
                               TextColor="#00AA00"
                               FontFamily="Courier New"
                               FontSize="14"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Back Button -->
        <Border Grid.Row="2"
                Stroke="#00FF00"
                StrokeThickness="2"
                Padding="15"
                BackgroundColor="#003300">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnBack"/>
            </Border.GestureRecognizers>
            <Label Text="← BACK TO MENU"
                   TextColor="#00FF00"
                   FontFamily="Courier New"
                   FontSize="16"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
        </Border>

    </Grid>
</ContentPage>