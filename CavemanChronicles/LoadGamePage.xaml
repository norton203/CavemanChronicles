<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CavemanChronicles.LoadGamePage"
             BackgroundColor="Black">

    <Grid>
        <!-- Background gradient -->
        <BoxView>
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#0a0015" Offset="0.0"/>
                    <GradientStop Color="#1a0033" Offset="0.5"/>
                    <GradientStop Color="#0a0015" Offset="1.0"/>
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <Grid RowDefinitions="Auto,*,Auto" Padding="20" RowSpacing="20">

            <!-- Title -->
            <VerticalStackLayout Grid.Row="0" Spacing="10">
                <Grid ColumnDefinitions="*,Auto,*" Margin="0,20,0,10">
                    <BoxView Grid.Column="0" HeightRequest="3" VerticalOptions="Center">
                        <BoxView.Background>
                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                <GradientStop Color="Transparent" Offset="0.0"/>
                                <GradientStop Color="#00FFFF" Offset="1.0"/>
                            </LinearGradientBrush>
                        </BoxView.Background>
                    </BoxView>

                    <Border Grid.Column="1"
                            Stroke="#00FFFF"
                            StrokeThickness="2"
                            Padding="15,8"
                            Margin="10,0"
                            BackgroundColor="#1a0033">
                        <Label Text="ðŸ“œ SCROLL ðŸ“œ"
                               TextColor="#00FFFF"
                               FontFamily="Courier New"
                               FontSize="16"
                               FontAttributes="Bold"/>
                    </Border>

                    <BoxView Grid.Column="2" HeightRequest="3" VerticalOptions="Center">
                        <BoxView.Background>
                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                <GradientStop Color="#00FFFF" Offset="0.0"/>
                                <GradientStop Color="Transparent" Offset="1.0"/>
                            </LinearGradientBrush>
                        </BoxView.Background>
                    </BoxView>
                </Grid>

                <Border Stroke="#00FFFF"
                        StrokeThickness="3"
                        Padding="20,15"
                        BackgroundColor="#0a1628">
                    <Label Text="â•â•â• LOAD SAVED GAME â•â•â•"
                           TextColor="#00FFFF"
                           FontFamily="Courier New"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                </Border>
            </VerticalStackLayout>

            <!-- Saved Characters List -->
            <ScrollView Grid.Row="1">
                <VerticalStackLayout x:Name="SavesContainer" Spacing="15">
                    <!-- Saved characters will be added here dynamically -->
                    <Border x:Name="NoSavesPanel"
                            Stroke="#FFD700"
                            StrokeThickness="2"
                            Padding="30"
                            BackgroundColor="#0a0015"
                            IsVisible="False">
                        <VerticalStackLayout Spacing="15">
                            <Label Text="[ NO SAVED GAMES FOUND ]"
                                   TextColor="#FFAA00"
                                   FontFamily="Courier New"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"/>
                            <Label Text="Start a new adventure to create your first save!"
                                   TextColor="#8B4513"
                                   FontFamily="Courier New"
                                   FontSize="14"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </ScrollView>

            <!-- Back Button -->
            <Border Grid.Row="2"
                    StrokeThickness="0"
                    Padding="0"
                    BackgroundColor="Transparent">
                <Grid>
                    <!-- Outer glow -->
                    <Border Stroke="#00FFFF"
                            StrokeThickness="4"
                            Padding="15"
                            BackgroundColor="Transparent"
                            Opacity="0.5"
                            Margin="-3,-3,-3,-3"/>

                    <!-- Main button -->
                    <Border StrokeThickness="3"
                            Padding="15">
                        <Border.Stroke>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#00FFFF" Offset="0.0"/>
                                <GradientStop Color="#4169E1" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Border.Stroke>
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#0a1628" Offset="0.0"/>
                                <GradientStop Color="#050b14" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnBack"/>
                        </Border.GestureRecognizers>

                        <Grid>
                            <Label Text="â† BACK TO MENU"
                                   TextColor="#003366"
                                   FontFamily="Courier New"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   Margin="2,2,0,0"/>
                            <Label Text="â† BACK TO MENU"
                                   TextColor="#00FFFF"
                                   FontFamily="Courier New"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

        </Grid>
    </Grid>
</ContentPage>