<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CavemanChronicles.TitlePage"
             BackgroundColor="Black">

    <Grid RowDefinitions="*,Auto,Auto,Auto,*" Padding="20">

        <!-- Title -->
        <VerticalStackLayout Grid.Row="1" Spacing="10">
            <Label Text="CAVEMAN"
                   TextColor="#00FF00"
                   FontFamily="Courier New"
                   FontSize="48"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            <Label Text="CHRONICLES"
                   TextColor="#00FF00"
                   FontFamily="Courier New"
                   FontSize="48"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"/>

            <Label Text="FROM CAVEMAN TO THE FUTURE"
                   TextColor="#00AA00"
                   FontFamily="Courier New"
                   FontSize="14"
                   HorizontalOptions="Center"
                   Margin="0,0,0,40"/>
        </VerticalStackLayout>

        <!-- Menu Options -->
        <VerticalStackLayout Grid.Row="2" Spacing="15" Margin="0,20,0,20">

            <!-- New Game Button -->
            <Border Stroke="#00FF00"
                    StrokeThickness="2"
                    Padding="20,15"
                    BackgroundColor="Black">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnNewGame"/>
                </Border.GestureRecognizers>
                <Label Text="NEW GAME"
                       TextColor="#00FF00"
                       FontFamily="Courier New"
                       FontSize="20"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>
            </Border>

            <!-- Load Game Button -->
            <Border Stroke="#00FF00"
                    StrokeThickness="2"
                    Padding="20,15"
                    BackgroundColor="Black">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnLoadGame"/>
                </Border.GestureRecognizers>
                <Label Text="LOAD GAME"
                       TextColor="#00FF00"
                       FontFamily="Courier New"
                       FontSize="20"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>
            </Border>

        </VerticalStackLayout>

        <!-- Footer -->
        <Label Grid.Row="3"
               Text="A TEXT-BASED RPG ADVENTURE"
               TextColor="#004400"
               FontFamily="Courier New"
               FontSize="12"
               HorizontalOptions="Center"
               Margin="0,40,0,0"/>

    </Grid>
</ContentPage>