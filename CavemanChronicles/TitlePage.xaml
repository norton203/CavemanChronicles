<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CavemanChronicles"
             x:Class="CavemanChronicles.TitlePage"
             BackgroundColor="Black">

    <Grid>
        <!-- Clean gradient background -->
        <BoxView>
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#0a0015" Offset="0.0"/>
                    <GradientStop Color="#1a0033" Offset="0.5"/>
                    <GradientStop Color="#0a0015" Offset="1.0"/>
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <Grid RowDefinitions="Auto,*,Auto,Auto,Auto" Padding="20">

            <!-- Top border -->
            <Grid Grid.Row="0" 
                  ColumnDefinitions="*,Auto,*"
                  Margin="0,20,0,0">
                <BoxView Grid.Column="0" HeightRequest="3" VerticalOptions="Center">
                    <BoxView.Background>
                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                            <GradientStop Color="Transparent" Offset="0.0"/>
                            <GradientStop Color="#8B4513" Offset="1.0"/>
                        </LinearGradientBrush>
                    </BoxView.Background>
                </BoxView>

                <Border Grid.Column="1"
                        Stroke="#8B4513"
                        StrokeThickness="3"
                        Padding="15,8"
                        Margin="10,0"
                        BackgroundColor="#3a2817">
                    <Label Text="ðŸ¦´ STONE AGE ðŸ¦´"
                           TextColor="#FFD700"
                           FontFamily="Courier New"
                           FontSize="16"
                           FontAttributes="Bold"/>
                </Border>

                <BoxView Grid.Column="2" HeightRequest="3" VerticalOptions="Center">
                    <BoxView.Background>
                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                            <GradientStop Color="#8B4513" Offset="0.0"/>
                            <GradientStop Color="Transparent" Offset="1.0"/>
                        </LinearGradientBrush>
                    </BoxView.Background>
                </BoxView>
            </Grid>

            <!-- Title Section -->
            <VerticalStackLayout Grid.Row="1" 
                                VerticalOptions="Center" 
                                Spacing="5">

                <Border StrokeThickness="3"
                        Stroke="#654321"
                        Padding="30,20"
                        Margin="0,0,0,20"
                        HeightRequest="200"
                        WidthRequest="400"
                        HorizontalOptions="Center">
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="8,8" Radius="20" Opacity="0.8"/>
                    </Border.Shadow>
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#4a4a4a" Offset="0.0"/>
                            <GradientStop Color="#2a2a2a" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <VerticalStackLayout Spacing="5" VerticalOptions="Center">
                        <Grid>
                            <Label Text="CAVEMAN"
                                   TextColor="#1a1a1a"
                                   FontFamily="Courier New"
                                   FontSize="42"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   Margin="3,3,0,0"/>
                            <Label Text="CAVEMAN"
                                   TextColor="#3a3a3a"
                                   FontFamily="Courier New"
                                   FontSize="42"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   Margin="2,2,0,0"/>
                            <Label Text="CAVEMAN"
                                   TextColor="#D2691E"
                                   FontFamily="Courier New"
                                   FontSize="42"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"/>
                        </Grid>

                        <Grid>
                            <Label Text="CHRONICLES"
                                   TextColor="#1a1a1a"
                                   FontFamily="Courier New"
                                   FontSize="42"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   Margin="3,3,0,0"/>
                            <Label Text="CHRONICLES"
                                   TextColor="#3a3a3a"
                                   FontFamily="Courier New"
                                   FontSize="42"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   Margin="2,2,0,0"/>
                            <Label Text="CHRONICLES"
                                   TextColor="#808080"
                                   FontFamily="Courier New"
                                   FontSize="42"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"/>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <Label Text="âš” A JOURNEY THROUGH TIME âš”"
                       TextColor="#FFD700"
                       FontFamily="Courier New"
                       FontSize="14"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       Margin="0,10,0,0"/>
            </VerticalStackLayout>

            <!-- Decorative divider -->
            <Grid Grid.Row="2" ColumnDefinitions="Auto,*,Auto" Margin="0,10,0,10">
                <Label Grid.Column="0" 
                       Text="â–“â–“â–“"
                       TextColor="#8B4513"
                       FontFamily="Courier New"
                       FontSize="12"/>
                <BoxView Grid.Column="1" 
                         HeightRequest="2" 
                         Color="#654321"
                         VerticalOptions="Center"
                         Margin="5,0"/>
                <Label Grid.Column="2" 
                       Text="â–“â–“â–“"
                       TextColor="#8B4513"
                       FontFamily="Courier New"
                       FontSize="12"/>
            </Grid>

            <!-- Menu Options with TILED stone buttons -->
            <VerticalStackLayout Grid.Row="3" Spacing="15" Margin="0,0,0,20">

                <!-- New Game Button -->
                <Border x:Name="NewGameButton"
                        StrokeThickness="0"
                        Padding="0"
                        BackgroundColor="Transparent"
                        HeightRequest="60"
                        HorizontalOptions="Fill">
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="4,4" Radius="10" Opacity="0.6"/>
                    </Border.Shadow>

                    <Border x:Name="NewGameBorder"
                            StrokeThickness="3"
                            Stroke="#654321"
                            BackgroundColor="Transparent"
                            HeightRequest="60">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnNewGame"/>
                            <PointerGestureRecognizer PointerEntered="OnNewGamePointerEntered"
                                                     PointerExited="OnNewGamePointerExited"/>
                        </Border.GestureRecognizers>

                        <Grid>
                            <!-- TILED Stone texture -->
                            <local:TiledImageView Source="flatstones.png"
                                                  OpacityValue="0.6"/>

                            <!-- Button content -->
                            <Grid ColumnDefinitions="Auto,*,Auto" Padding="25,0">
                                <Label Grid.Column="0"
                                       x:Name="NewGameLeftIcon"
                                       Text="âš” "
                                       TextColor="#FFD700"
                                       FontFamily="Courier New"
                                       FontSize="24"
                                       VerticalOptions="Center"/>

                                <Grid Grid.Column="1">
                                    <Label x:Name="NewGameShadow"
                                           Text="NEW GAME"
                                           TextColor="#1a0f0a"
                                           FontFamily="Courier New"
                                           FontSize="24"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           Margin="2,2,0,0"/>
                                    <Label x:Name="NewGameText"
                                           Text="NEW GAME"
                                           TextColor="#FFD700"
                                           FontFamily="Courier New"
                                           FontSize="24"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Grid>

                                <Label Grid.Column="2"
                                       x:Name="NewGameRightIcon"
                                       Text=" âš”"
                                       TextColor="#FFD700"
                                       FontFamily="Courier New"
                                       FontSize="24"
                                       VerticalOptions="Center"/>
                            </Grid>
                        </Grid>
                    </Border>
                </Border>

                <!-- Load Game Button -->
                <Border x:Name="LoadGameButton"
                        StrokeThickness="0"
                        Padding="0"
                        BackgroundColor="Transparent"
                        HeightRequest="60"
                        HorizontalOptions="Fill">
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="4,4" Radius="10" Opacity="0.6"/>
                    </Border.Shadow>

                    <Border x:Name="LoadGameBorder"
                            StrokeThickness="3"
                            Stroke="#4a5f5f"
                            BackgroundColor="Transparent"
                            HeightRequest="60">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLoadGame"/>
                            <PointerGestureRecognizer PointerEntered="OnLoadGamePointerEntered"
                                                     PointerExited="OnLoadGamePointerExited"/>
                        </Border.GestureRecognizers>

                        <Grid>
                            <!-- TILED Stone texture -->
                            <local:TiledImageView Source="flatstones.png"
                                                  OpacityValue="0.6"/>

                            <!-- Button content -->
                            <Grid ColumnDefinitions="Auto,*,Auto" Padding="25,0">
                                <Label Grid.Column="0"
                                       x:Name="LoadGameLeftIcon"
                                       Text="ðŸ“œ "
                                       TextColor="#00FFFF"
                                       FontFamily="Courier New"
                                       FontSize="24"
                                       VerticalOptions="Center"/>

                                <Grid Grid.Column="1">
                                    <Label x:Name="LoadGameShadow"
                                           Text="LOAD GAME"
                                           TextColor="#001a1a"
                                           FontFamily="Courier New"
                                           FontSize="24"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           Margin="2,2,0,0"/>
                                    <Label x:Name="LoadGameText"
                                           Text="LOAD GAME"
                                           TextColor="#00FFFF"
                                           FontFamily="Courier New"
                                           FontSize="24"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Grid>

                                <Label Grid.Column="2"
                                       x:Name="LoadGameRightIcon"
                                       Text=" ðŸ“œ"
                                       TextColor="#00FFFF"
                                       FontFamily="Courier New"
                                       FontSize="24"
                                       VerticalOptions="Center"/>
                            </Grid>
                        </Grid>
                    </Border>
                </Border>

                <!-- Settings Button -->
                <Border x:Name="SettingsButton"
                        StrokeThickness="0"
                        Padding="0"
                        BackgroundColor="Transparent"
                        HeightRequest="60"
                        HorizontalOptions="Fill">
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="4,4" Radius="10" Opacity="0.6"/>
                    </Border.Shadow>

                    <Border x:Name="SettingsBorder"
                            StrokeThickness="3"
                            Stroke="#2d4d2d"
                            BackgroundColor="Transparent"
                            HeightRequest="60">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnSettings"/>
                            <PointerGestureRecognizer PointerEntered="OnSettingsPointerEntered"
                                                     PointerExited="OnSettingsPointerExited"/>
                        </Border.GestureRecognizers>

                        <Grid>
                            <!-- TILED Stone texture -->
                            <local:TiledImageView Source="flatstones.png"
                                                  OpacityValue="0.6"/>

                            <!-- Button content -->
                            <Grid ColumnDefinitions="Auto,*,Auto" Padding="25,0">
                                <Label Grid.Column="0"
                                       x:Name="SettingsLeftIcon"
                                       Text="âš™ "
                                       TextColor="#00FF00"
                                       FontFamily="Courier New"
                                       FontSize="24"
                                       VerticalOptions="Center"/>

                                <Grid Grid.Column="1">
                                    <Label x:Name="SettingsShadow"
                                           Text="SETTINGS"
                                           TextColor="#001a00"
                                           FontFamily="Courier New"
                                           FontSize="24"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           Margin="2,2,0,0"/>
                                    <Label x:Name="SettingsText"
                                           Text="SETTINGS"
                                           TextColor="#00FF00"
                                           FontFamily="Courier New"
                                           FontSize="24"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Grid>

                                <Label Grid.Column="2"
                                       x:Name="SettingsRightIcon"
                                       Text=" âš™"
                                       TextColor="#00FF00"
                                       FontFamily="Courier New"
                                       FontSize="24"
                                       VerticalOptions="Center"/>
                            </Grid>
                        </Grid>
                    </Border>
                </Border>

            </VerticalStackLayout>

            <!-- Footer -->
            <VerticalStackLayout Grid.Row="4" Spacing="8">
                <Grid ColumnDefinitions="*,Auto,*" Margin="0,10,0,0">
                    <BoxView Grid.Column="0" 
                             HeightRequest="1" 
                             Color="#654321"
                             VerticalOptions="Center"/>
                    <Label Grid.Column="1"
                           Text=" ðŸ¦´ FROM CAVES TO STARS ðŸ¦´ "
                           TextColor="#8B4513"
                           FontFamily="Courier New"
                           FontSize="10"
                           FontAttributes="Bold"/>
                    <BoxView Grid.Column="2" 
                             HeightRequest="1" 
                             Color="#654321"
                             VerticalOptions="Center"/>
                </Grid>

                <Label Text="v1.0 - Prehistoric Edition"
                       TextColor="#666666"
                       FontFamily="Courier New"
                       FontSize="10"
                       HorizontalOptions="Center"
                       Margin="0,0,0,10"/>
            </VerticalStackLayout>

        </Grid>
    </Grid>
</ContentPage>